<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <Button
        android:id="@+id/screenshot"
        android:layout_width="@dimen/button_common_size"
        android:layout_height="@dimen/button_common_size"
        android:layout_marginBottom="@dimen/button_common_margin_size"
        android:background="@drawable/screenshot"/>

    <Button
        android:id="@+id/start_record"
        android:layout_width="@dimen/button_common_size"
        android:layout_height="@dimen/button_common_size"
        android:layout_marginBottom="@dimen/button_common_margin_size"
        android:background="@drawable/screenrecord"/>

    <Button
        android:id="@+id/stop_record"
        android:layout_width="@dimen/button_common_size"
        android:layout_height="@dimen/button_common_size"
        android:layout_marginBottom="@dimen/button_common_margin_size"
        android:background="@drawable/stop_record"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</LinearLayout>